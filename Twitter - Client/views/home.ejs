<script>
  

  	var home = angular.module('homeAngular', []);
	home.controller('homeController', homeOperations); 

	<!--Home Function-->
	
	function homeOperations($scope, $http) {
  		
  		$scope.followUs = false;
  		


  		
		$http.get("/overview")
  			.success(function(data) {
  				console.log("Success returned from Overview function");
  				$scope.name = data[0].fname + data[0].lname;
  				$scope.name1 = data[0].fname;
  				$scope.email = data[0].email_id;
  				$scope.phno = data[0].phone_no;
  				$scope.address = data[0].address;
          		$scope.username123 = data[0].user_name;
  		})

  			$http.get("/follower_count")
  			.success(function(data) {
  				console.log("Success returned from Overview function");
  				$scope.follower = data[0].follower1 ;
  				
  		})


			$http.get("/following_count")
  			.success(function(data) {
  				console.log("Success returned from Overview function");
  				$scope.following = data[0].following1 ;
  				
  		})


  			$http.get("/tweet_count")
  			.success(function(data) {
  				console.log("Success returned from Overview function");
  				$scope.tweet = data[0].tweets ;
  				
  		})


  			$http.get("/wallPost")
  			.success(function(data) {
  				console.log("Success returned from wallPost function");
  				$scope.feeds = data.slice(0);
  	})

		  	$http.get("/getFollowing")
  			.success(function(data) {
  				console.log("Success returned from wallPost function");
  				$scope.details = data.slice(0);
  	})

		  	$http.get("/getFollowers")
  			.success(function(data) {
  				console.log("Success returned from wallPost function");
  				$scope.details1 = data.slice(0);
  	})

	  		$scope.logout = function(){
  		
  			console.log("Inside logout function");
  			$http.post("/logout")
  			.success(function(data) {
  				console.log("Success returned from Logout");
  				window.location.assign("/");
  			})
  			
  		}
  		
  			$scope.searchUser = function(){
  		
  			var searchUser = "";
  			console.log("Inside search function");
  			searchUser = {name:$scope.search}
  			
  			$http.post("/search",searchUser)
  			.success(function(data) {
  				console.log("Success returned from searchUser function");
  				
  				console.log(data);
  				$scope.fname = $scope.search;
  				
  				if (data === "N"){
  					$scope.followUs = true;
  				}
  				
  				if (data[0].request_status === "A"){
  						$scope.status = "Already following";
  				}
  			})
  			
  		}
  	
  	<!--follow user-->
  		
  		$scope.followUser = function(){
  				
  			var reqUser = "";
  			console.log("Inside followUser() function");
  			reqUser = {destination:$scope.fname}
  			
  			$http.post("/followUs",reqUser)
  			.success(function(data) {
  				console.log("Success returned from followUser() function");
  				$scope.status = "followed user successfully"
  				
  			})
  						
  		}

  		$scope.postFeed = function(){
  		
  			var news = "";
  			console.log("Inside postFeed() function");
  			news = {newsfeed:$scope.feed};
  			
  			$http.post("/postFeed",news)
  			.success(function(data) {
  				console.log("Success returned from newsFeed() function");
  				if (data === "Success"){
  					$scope.feedStatus = "Feed posted successfully";
  				}
  				
  			})
  			
  		}	
  }



  		$scope.retweet1 = function(){
  		
  			var retw = "";
  			console.log("Inside retweet() function");
  			retw = {newsfeed:$scope.feed};
  			
  			$http.post("/retweet1",retw)
  			.success(function(data) {
  				console.log("Success returned from newsFeed() function");
  				if (data === "Success"){
  					$scope.feedStatus = "retweeted successfully";
  				}
  				
  			})
  			
  		}	
  }

		
</script>
