<script>
  
  	var home = angular.module('homeAngular', []);
	home.controller('homeController', homeOperations); 
	
	<!--Home Function-->
	
	function homeOperations($scope, $http) {
  		
        	$scope.saveContactInfo = function(){
  		
  			var contactInfo = "";
  			
  			contactInfo = {phone:$scope.phNo, address:$scope.address, username:$scope.username12, dob1:$scope.dob};
  			
  			console.log("Inside saveContactInfo function");
  			$http.post("/saveContactInfo", contactInfo)
  			.success(function(data) {
  				console.log("saveContactInfo function");
  				$scope.saveStatus = "DETAILS SAVED SUCCESSFULLY!!!";
  			})
  			
  	}

          $scope.logout = function(){
      
        console.log("Inside logout function");
        $http.post("/logout")
        .success(function(data) {
          console.log("Success returned from Logout");
          window.location.assign("/");
        })
        
      }

  	
  	
}
		
</script>
