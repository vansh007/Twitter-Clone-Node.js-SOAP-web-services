      				<br>
              <div class = "input-group">
                <span class = "input-group-addon">Birth-Date</span>
                <input type = "date" class = "form-control" placeholder = "Enter your Birthdate" ng-model="dob">
              </div>
            <br>
      
      				<button type="button" class="btn btn-success pull-right" ng-click="saveContactInfo()">Save</button>
         			
         			<br>
         			
         			{{saveStatus}}
         			
         		</form>
   
